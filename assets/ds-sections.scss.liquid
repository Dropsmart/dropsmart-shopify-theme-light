$default-spacing: 8;
$default-font-size: 18px;
$mobile-font-size: 14px;

/* MAIN-CONFIG */

body {
  font-size: $default-font-size !important;
  @media (max-width: 768px) {
    font-size: $mobile-font-size !important;
  }
}

section {
  margin: auto;
}

@for $i from 1 through 30 {
  .shopify-section:nth-child(#{$i}) {
    order: $i;
    &.mobile-reverse {
      @media (max-width: 768px) {
        order: #{$i + 2};
      }
    }
  }
}

main#main {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  justify-content: center;
  background-image: url('{{settings.background_image | img_url: 'master'}}');
  background-repeat: no-repeat; 
  background-position: top center;
  background-size: auto;
  @media (max-width: 768px) {
    background-image: url('{{settings.background_image_mobile | img_url: 'master'}}');
    background-position: top center;
  }

  .center_content {
      max-width: 1280px;
      margin: auto;
  }

  .absolute {
    position: absolute;
    top: 0;
  }

  .shopify-section {
    display: flex;
    width: 100%;
    
    & > div {
      display: flex;
      width: 100%;
      .Container {
        margin: 0 auto;
      }
    }
  }

  .mobile-hide {
    @media (max-width: 768px) {
      display: none;
      opacity: 0;
      position: absolute;
      height: 0px !important;
    }
  }

  .desktop-hide {
    display: none;
    position: absolute;
    opacity: 0;
    height: 0px;
    @media (max-width: 768px) {
      display: inherit;
      position: relative;
      opacity: 1;
      height: auto;
    }
  }

  .absolute {
    position: absolute;
    width: 100%;
  }

   /* END MAIN-CONFIG */
}