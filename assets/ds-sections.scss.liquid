    }
  }
/* END-FONT */

/* MAIN-CONFIG */

body {
  font-size: $default-font-size !important;
  @media (max-width: 768px) {
    font-size: $mobile-font-size !important;
  }
}

section {
  margin: auto;
}

@for $i from 1 through 30 {
  .shopify-section:nth-child(#{$i}) {
    order: $i;
    &.mobile-reverse {
      @media (max-width: 768px) {
        order: #{$i + 2};
      }
    }
  }
}

main#main {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  justify-content: center;
  background-repeat: no-repeat; 
  background-position: top center;
  background-size: auto;
  @media (max-width: 768px) {
    background-position: top center;
  }

  .center_content {
      max-width: 1280px;
      margin: auto;
  }

  .absolute {
    position: absolute;
    top: 0;
  }

  .shopify-section {
    display: flex;
    width: 100%;
    
    & > div {
      display: flex;
      width: 100%;
      .Container {
        margin: 0 auto;
      }
    }
  }

  section.shopify-section {
    margin: 0;
    width: 50%;

    &:nth-of-type(even) {
      & > div {
        background-repeat: no-repeat;
        background-position: right center; 
        background-size: contain;
        justify-content: flex-start;
        .Container {
          padding-left: $default-spacing * 2px;
          @media (max-width: 768px) {
            padding-left: $default-spacing * 4px;
            padding-top: $default-spacing * 4px;
          }
        }
      }
    }

    &:nth-of-type(odd) {
      & > div {
        background-repeat: no-repeat;
        background-position: left center; 
        background-size: contain;
        justify-content: flex-end;
        .Container {
          padding-right: $default-spacing * 2px;
          @media (max-width: 768px) {
            padding-right: $default-spacing * 4px;
            padding-bottom: $default-spacing * 4px;
          }
        }
      }
    }

    & > div {
      display: flex;
      .Container {
        max-width: 620px;
        margin: 0;
      }
    }

    @media (max-width: 768px) {
      width: 100%;
      &:nth-of-type(odd) {
        & > div {
          .Container {
            padding-bottom: $default-spacing * 4px;
          }
        }
      }
      &:nth-of-type(even) {
        & > div {
          .Container {
            padding-top: $default-spacing * 4px;
          }
        }
      }
      &:nth-child(even), &:nth-child(odd) {
        & > div {
          justify-content: center;
          .Container {
            margin: 0 auto;
            max-width: 768px;
          }
        }
      }
    }
  }

  .mobile-hide {
    @media (max-width: 768px) {
      display: none;
      opacity: 0;
      position: absolute;
      height: 0px !important;
    }
  }

  .desktop-hide {
    display: none;
    position: absolute;
    opacity: 0;
    height: 0px;
    @media (max-width: 768px) {
      display: inherit;
      position: relative;
      opacity: 1;
      height: auto;
    }
  }

  .absolute {
    position: absolute;
    width: 100%;
  }


   /* SIZES */

    .container-full {
      max-width: 1280px;
      margin: auto;
    }

    .container-medium {
      max-width: 980px;
      margin: auto;
    }

    .container-small {
      max-width: 720px;
      margin: auto;
    }

    .weight-300 {
      font-weight: 300 !important;
    }

    .weight-400 {
      font-weight: 400 !important;
    }

    .weight-800 {
      font-weight: 800 !important;
    }

    .weight-900 {
      font-weight: 900 !important;
    }

    .Container, .regular {
      width: 100%; 
      padding: $default-spacing * 16px $default-spacing * 4px;
      padding-bottom: $default-spacing * 16px - $default-spacing * 4px;
        
        .content {
          padding: 0;
          margin: 0;
          width: 100%;
        }
        h1, h2, h3, h4, p, .component-cta, img {
          margin-bottom: $default-spacing * 4px;
        }
     }

    .regular {
      padding-top: $default-spacing * 16px;
      padding-bottom: $default-spacing * 16px - $default-spacing * 4px;

      .content, .features {
        > div h1, > div h2, > div h3, > div h4, > span p, > .component-cta, > img, > figure img {
          margin-bottom: $default-spacing * 4px;
        }
      }
      @media (max-width: 768px) {
        padding-top: $default-spacing * 8px;
        padding-bottom: $default-spacing * 8px - $default-spacing * 4px;

        .content, .features {
          > div h1, > div h2, > div h3, > div h4, > span p, > .component-cta, > img, > figure img {
            margin-bottom: $default-spacing * 4px;
          }
        }
      }
    }

    .regular-large {
      padding-top: $default-spacing * 16px;
      padding-bottom: $default-spacing * 16px - $default-spacing * 8px;

      .content, .features {
        > div h1, > div h2, > div h3, > div h4, > span p, > .component-cta, > img, > figure img {
          margin-bottom: $default-spacing * 8px;
        }
        .feature {
          &:last-child {
            margin-bottom: $default-spacing * 6px !important;
          }
        }
      }
    }

    .regular-small {
      padding-top: $default-spacing * 8px;
      padding-bottom: $default-spacing * 8px - $default-spacing * 2px;

      .content, .features {
        > div h1, > div h2, > div h3, > div h4, > span p, > .component-cta, > img, > figure img {
          margin-bottom: $default-spacing * 2px;
        }
      }
    }

    .space-around-small {
      padding-top: $default-spacing * 8px;
      padding-bottom: $default-spacing * 8px - $default-spacing * 4px;

      .content, .features {
        > div h1, > div h2, > div h3, > div h4, > span p, > .component-cta, > img, > figure img {
          margin-bottom: $default-spacing * 4px;
        }
      }
    }

    .space-around {
      padding-top: $default-spacing * 24px;
      padding-bottom: $default-spacing * 16px - $default-spacing * 4px;

      .content, .features {
        > div h1, > div h2, > div h3, > div h4, > span p, > .component-cta, > img, > figure img {
          margin-bottom: $default-spacing * 4px;
        }
      }
    }

    .space-around-large {
      padding-top: $default-spacing * 24px;
      padding-bottom: $default-spacing * 32px - $default-spacing * 8px;

      .content, .features {
        > div h1, > div h2, > div h3, > span p, > .component-cta, > img, > figure img {
          margin-bottom: $default-spacing * 8px;
        }
        .feature {
          &:last-child {
            margin-bottom: $default-spacing * 6px !important;
          }
        }
      }
    }
   
    .no-padding-bottom {
      padding-bottom: 0 !important;
    }

    .no-padding-top {
      padding-top: 0 !important;
    }

    .no-padding {
      padding-top: 0 !important;
      padding-bottom: 0 !important;
    }

    
   /* END SIZES */

   /* END MAIN-CONFIG */

   /* FLEX */

    .grow-0 {
      flex-grow: 0 !important;
    }
    
    .justify-left {
      justify-content: flex-start !important;
      align-content: flex-start;
      text-align: left;
      align-self: flex-start;
    }

    .justify-space-evenly {
      justify-content: space-evenly !important;
      align-content: center;
    }
    
    .justify-right {
      justify-content: flex-end !important;
      align-content: flex-end;
      text-align: right;
      align-self: flex-end;
    }
    
    .justify-center {
      justify-content: center !important;
      align-content: center;
      text-align: center;
      align-items: center;
      align-self: center;
    }
    
    .flex {
      display: flex;
      flex-direction: row;
      @media (max-width: 768px) {
          flex-direction: column-reverse;
      }
      
      > div {
          display: flex;
          flex-grow: 1;
        flex-direction: column;
      }
    }
    
    .flex-reverse {
      display: flex;
      flex-direction: row-reverse;
      @media (max-width: 768px) {
          flex-direction: column-reverse;
      }
      
      > div {
          display: flex;
          flex-grow: 1;
        flex-direction: column;
      }
    }

    .flex-row {
      flex-direction: row !important;
      align-items: end;
      align-self: center;
    }

    .flex-column {
      flex-direction: column !important;
      align-items: center;
    }

    .mobile-flex-row {
      @media (max-width: 768px) {
        align-self: center;
        flex-direction: row !important;
        align-items: center;
      }
    }

    .mobile-flex-column {
      @media (max-width: 768px) {
        flex-direction: column !important;
        align-items: center;
      }
    }

    .flex-basis-1 {
      flex-basis: calc(50% - 32px);
    }

    .flex-basis-2 {
      flex-basis: calc(50% - 32px);
    }

    .flex-basis-3 {
      flex-basis: calc(33% - 32px);
    }

    .flex-basis-4 {
      flex-basis: calc(25% - 32px);
    }

    .flex-basis-5 {
      flex-basis: calc(20% - 32px);
    }

    .flex-basis {
      flex-basis: 0;
    }
   /* END - FLEX */

   /* SECTIONS */
    .lp-content {
        height: 100%;
        .content {
          padding: 0;
          margin: 0;
          
          h1, h2, h3, paragraph {
            margin-bottom: $default-spacing * 4px;
            
          }
        }

        .paragraph {
          p {
            color: inherit !important;
          }
        }
      }
    


    .lp-header {

      header {
        width: 100%;
        display: flex;
        padding-top: 0;

        img.brand {
          padding: 0;
          max-width: 200px;
          max-height: 80px;
          z-index: 3;
          align-self: center;
          @media (max-width: 768px) {
            transform: scale(0.75);
            transform-origin: left;
          }
        }
        
        nav {
          padding: 0;
          align-self: center;
          @media (max-width: 768px) {
            align-self: self-start;
          }
        
          .navbar-toggler {
            padding: 0;
            z-index: 2;
          }
        }

        .Container {
          justify-content: space-between;
          @media (max-width: 768px) {
            flex-direction: row;
            padding: $default-spacing * 6px $default-spacing * 4px;
            padding-bottom: $default-spacing * 2px !important;
          }
          
          a {
            font-size: 1.25em;
            margin-bottom: $default-spacing * 4px;
          }
        }
      }
    }
      
   /* END SECTIONS */

   /* COMPONENTS */

    .component-cta {
      display: inline-block;
      margin-top: 0;
      padding: $default-spacing * 2px $default-spacing * 6px;
      font-weight: 700;
      text-align: center; 
      transition: 0.4s;
      border-radius: 4px;
      box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.1), 0px 4px 8px 0px rgba(0,0,0,0.15), 0px 0px 4px 0px rgba(0,0,0,0.05);

      &:hover,
      &:focus {
        transform: scale(1.05);
        box-shadow: 0px 12px 20px 0px rgba(0,0,0,0.075), 0px 6px 12px 0px rgba(0,0,0,0.15), 0px 0px 8px 0px rgba(0,0,0,0.03);
      }

      @media (max-width: 768px) {
        padding: 8px 10%;
      }
    }


    nav {
      align-self: center;
      padding: 0;
      img {
        position: absolute;
        padding: 0;
        left: 0;
        top: 0;
      }
      .navbar-collapse {
        @media (min-width: 768px) {
          background-color: transparent !important;
        }
        @media (max-width: 768px) {
          position: absolute;
          right: $default-spacing * -4px;
          padding: $default-spacing * 4px;
          padding-top: $default-spacing * 40px;
          padding-bottom: 0;
          width: 256px;
        }
      }
      li.nav-item.active {
        display: flex;
        align-items: center;
        padding-right:  $default-spacing * 4px;
        
        &:last-child {
          padding-right: 0;
        }
        

        @media (max-width: 768px) {
          height: auto;
          width: 100%;
          padding-right: 0;
        }

        a {
          @media (max-width: 768px) {
            text-align: left;
            font-size: 1.25rem;
            width: 100%;
          }
        }
      }

      .component-cta {
        @media (max-width: 768px) {
          margin-left: 0px;
          width: -webkit-fill-available;
        }
      }
    }

  .component-product {
     margin-top: $default-spacing * 2px !important;
     overflow: hidden;
     display: table !important;
     height: auto;
     min-height: -moz-available;
     min-height: fill-available;
     min-height: stretch;
     display: flex;
     flex-grow: 0;
     flex-basis: 0;
     min-width: 280px;
     max-width: 380px;
     margin: 0 $default-spacing * 4px $default-spacing * 4px;

    @media (max-width: 768px) {
      overflow: initial;
      margin: 0 !important;
      margin-bottom: $default-spacing * 4px !important;
    }
     
    &.active {
      transform: scale(1.025);
      @media (max-width: 768px) {
        transform: scale(1);
      }
    }

    .ProductForm {
      margin-top: 0px;
    }
    
    .image-wrapper {
      width: 100%;
      display: flex;
      justify-content: center;

      @media (max-width: 768px) {
        margin-top: $default-spacing * 2px;
        width: 50%;
        margin: 0 auto;
      }

      .best-deal {
        position: relative;
        display: flex;
        width: 100%;
        text-align: center;
        justify-content: center;
        align-items: center;
        h4 {
          margin: $default-spacing * 2px 0;
          margin-bottom:  $default-spacing * 2px !important;
        }
        @media (max-width: 768px) {
          font-size: 0.75em;
        }
      }

      figure {
        width: 100%;
        display: flex;
        justify-content: center;
        img {
          width: 100%;
          margin-bottom: 0 !important;
        }
      }
    }

    .tag {
      transform-origin: center;
      transform: translateY(50%);
      margin: 0 auto;
      padding: $default-spacing * 2px $default-spacing * 4px;
      h4 {
        margin-bottom: 0 !important;
      }
    }

    .price-tag {
      width: 100%;
      justify-content: space-between;
      padding: $default-spacing * 2px 0 0;
      .price-div {

        h2 {
          position: relative;
          margin-bottom: $default-spacing * 1px !important;
          @media (max-width: 768px) {
            margin-bottom: 0 !important;
          }
        }
        .discount {
          text-decoration: line-through;
        }
        @media (max-width: 768px) {
          font-size: 0.75em;
          width: fit-content;
        }
      }
      @media (max-width: 768px) {
        padding: $default-spacing * 2px;
        text-align: left;
        align-items: flex-end;
      }
    }

    .title-wrapper {
      width: 100%;
      padding: 0 $default-spacing * 4px;
      padding-top: $default-spacing * 4px;
      padding-bottom: $default-spacing * 2px;
      h2 {
        margin-bottom: $default-spacing * 2px !important;
      }
      @media (max-width: 768px) {
        padding: $default-spacing * 2px;
        margin-bottom: $default-spacing * 0px !important;
        h2 {
          margin-bottom: 0 !important;
        }
      }
    }

    .paragraph {
      p {
        color: inherit !important;
      }
    }

    .product-info {
      padding: $default-spacing * 1px $default-spacing * 4px;
      padding-top: $default-spacing * 2px;
      h2 {
        margin-bottom: $default-spacing * 2px !important;
      }
    }
    .component-cta {
      margin: $default-spacing * 4px 0;
      @media (max-width: 768px) {
        margin: 0px 0 0 $default-spacing * 2px;
        padding: 4px $default-spacing * 1px 0px;
        padding-top: 4px !important;
      }
    }
  }
    
   /* END COMPONENTS */
}