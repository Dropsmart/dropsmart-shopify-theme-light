    font-family: "Cairo" !important;
    p, h1, h2, h3, h4, span, div, strong {
      font-family: "Cairo" !important;
    }
  }
  .font-Roboto {
    font-family: "Roboto" !important;
    p, h1, h2, h3, h4, span, div, strong {
      font-family: "Roboto" !important;
    }
  }
  .font-Ubuntu {
    font-family: "Ubuntu" !important;
    p, h1, h2, h3, h4, span, div, strong {
      font-family: "Ubuntu" !important;
    }
  }
  .font-Titillium {
    font-family: "Titillium" !important;
    p, h1, h2, h3, h4, span, div, strong {
      font-family: "Titillium" !important;
    }
  }
  .font-Poppins {
    font-family: "Poppins" !important;
    p, h1, h2, h3, h4, span, div, strong {
