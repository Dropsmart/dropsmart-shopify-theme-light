$default-font-size: 18px;
$mobile-font-size: 14px;

@import url('//fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700;900&display=swap');
@import url('//fonts.googleapis.com/css2?family=Raleway:wght@300;400;600;700;900&display=swap');
