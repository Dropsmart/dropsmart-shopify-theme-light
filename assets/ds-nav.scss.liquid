$default-spacing: 8;
$default-font-size: 18px;
$mobile-font-size: 14px;

main#main {
  nav {
    align-self: center;
    padding: 0;
    img {
      position: absolute;
      padding: 0;
      left: 0;
      top: 0;
    }
    .navbar-collapse {
      @media (min-width: 768px) {
        background-color: transparent !important;
      }
      @media (max-width: 768px) {
        position: absolute;
        right: $default-spacing * -4px;
        padding: $default-spacing * 4px;
        padding-top: $default-spacing * 40px;
        padding-bottom: 0;
        width: 256px;
      }
    }
    li.nav-item.active {
      display: flex;
      align-items: center;
      padding-right:  $default-spacing * 4px;
      
      &:last-child {
        padding-right: 0;
      }
      

      @media (max-width: 768px) {
        height: auto;
        width: 100%;
        padding-right: 0;
      }

      a {
        @media (max-width: 768px) {
          text-align: left;
          font-size: 1.25rem;
          width: 100%;
        }
      }
    }

    .component-cta {
      @media (max-width: 768px) {
        margin-left: 0px;
        width: -webkit-fill-available;
      }
    }
  }
}
